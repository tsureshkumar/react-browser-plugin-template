{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "declaration": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": [
      "dom",
      "es2015"
    ],
    "jsx": "preserve",
    "module": "es2015",
    "moduleResolution": "node",
    "sourceMap": true,
    "target": "es5",
     "typeRoots": [
         "./src/typings",
         "node_modules/@types",
         "node_modules/web-ext-types",
         "node_modules/web-ext-types/global"
     ]
  },
  "include": [
    "src/*.ts",
    "src/**/*.ts",
    "src/*.tsx",
    "src/**/*.tsx"
  ],
  "exclude": [
    "node_modules",
    "src/**/*.spec.ts"
  ],
  "compileOnSave": false,
  "atom": {
    "rewriteTsconfig": false
  },
}
