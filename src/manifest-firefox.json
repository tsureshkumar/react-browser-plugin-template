{
    "manifest_version": 2,
    "name": "github2jira",
    "version": "1.0",
    "description": "Syncs github issues to Jira",
    "browser_action": {
        "default_popup": "popup.html"
    },
    "applications": {
        "gecko":  {
            "id": "githu2jira@github.com"
        }
    },
    "options_ui": {
      "page": "options.html",
      "browser_style": true
    },
    "permissions": ["storage", "activeTab", "contextMenus"],
    "content_security_policy": "script-src 'self' 'unsafe-eval' ; object-src 'self'"
}
